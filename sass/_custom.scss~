// goRESPONSIVE!
//  - we consider phones and tablets the same thing
$phone-xwide: 500px;

.not-on-phones {
	@include hidden(all-phones);
	@include hidden(tablets);
}

.only-on-phones {
	@include hidden(desktop);
	@include visible(all-phones);
}

@include respond(desktop) {
  /* Your font is so big, it's absurd! */
