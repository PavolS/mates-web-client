#JSGF V1.0;
/**
 * JSGF Grammar for SCO voiceloop -- demo version
 */


grammar voiceloop;



// !!
// requieres: polite, fill, fromto and spelling grammars
// !!

public <voiceloop> = <voiceloop_standard> | <voiceloop_broadcast>;

<voiceloop_broadcast> = <role_from> on loop <loop> <msg_hi> everyone;
<voiceloop_standard> = <role_to> <role_from> <msg>;

<role_from> = <fromto.from1> SOM <fromto.from2>;
<role_to> = <fromto.to> <polite.to> SOE | SPACON;

<msg> = <fill.start> <polite.start> ( <msg_hi> | <msg_lim> | <msg_inv> ) ( <polite.end> | <fill.end> );

<msg_lim> = change limits;
<msg_inv> = please investigate parameter <phoneticAlphabet.spelling>;
<msg_hi> = hi | hello | good morning;
<msg_repeat> = please repeat | can you repeat that please;

<loop> = one;

// Start merge with /lhome1/pavol/git-repos/mates-grammars/data/noise/fill.jsgf:fill ...
<fill.start> = [ well | so | could you | by the way | anyhow | however | <fill.startOrEndFill> ];
<fill.end> = [ I think | I hope | <fill.startOrEndFill> ];
<fill.startOrEndFill> = [ anyway | still | never the less ];
// .. end merge with /lhome1/pavol/git-repos/mates-grammars/data/noise/fill.jsgf:fill.

// Start merge with /lhome1/pavol/git-repos/mates-grammars/data/noise/fromto.jsgf:fromto ...
<fromto.from1> = <NULL> | this is | here | here ( is | speaks )  ;
<fromto.from2> = speaking | calling;
<fromto.to> = to | adsressing | reaching | for ;
// .. end merge with /lhome1/pavol/git-repos/mates-grammars/data/noise/fromto.jsgf:fromto.

// Start merge with /lhome1/pavol/git-repos/mates-grammars/data/noise/polite.jsgf:polite ...
<polite.start> = (please | kindly | could you) *;
<polite.to> = ( my | <NULL> ) very * (dear | dearest) *;
<polite.end> = [ please | thanks | thank you ];
// .. end merge with /lhome1/pavol/git-repos/mates-grammars/data/noise/polite.jsgf:polite.

